
require('dotenv').config();
const express = require('express');
const app = express();
const PORT = process.env.PORT || 4002;
app.get('/health', (req,res) => res.json({service:'growthflow', ok:true}));
app.post('/api/v1/trigger/:workflow', (req,res) => {
  const wf = req.params.workflow;
  // placeholder: enqueue a job or call a function
  res.json({ triggered: wf });
});
app.listen(PORT, () => console.log(`GrowthFlow ${PORT}`));
module.exports = app;